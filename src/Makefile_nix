CXX ?= g++
CXXFLAGS += -std=c++17 -O3
LDFLAGS += -pthread
CXXFLAGS += $(shell pkg-config --cflags glfw3)
LDFLAGS += $(shell pkg-config --libs glfw3)
CXXFLAGS += $(shell pkg-config --cflags vulkan)
LDFLAGS += $(shell pkg-config --libs vulkan)

all: rendertest client
.PHONY: all

rendertest: main.o
	$(CXX) $(LDFLAGS) -o $(@) $(^)
client: client.o
	$(CXX) $(LDFLAGS) -o $(@) $(^)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c -o $(@) $(<)
